<div class="hero-image">
  <img src="https://s3.envato.com/files/281866837/Banner_Gardering_48.jpg" width="100%">
  <div class="hero-text-position">
      <div class="card bg-light mb-3" style="width:30rem;">
        <br><br>
        <div class="card-body"><h2>Edit Profile </h2></div>
        <div class="card-body"><%= form_tag "/profile/#{@user.id}", method: :patch do  %>
          <%= label_tag(:name, "Name:") %>
          <%= text_field_tag :name, "#{@user.name}" %><br>
          <%= label_tag :zip_code %>
          <%= number_field_tag :zip_code, "#{@user.zip_code}"%><br>
          <%= submit_tag "Update Profile" %>
        <% end %>
        <br><br><br>
      </div>
    </div>
  </div>
</div>
<br><br>
